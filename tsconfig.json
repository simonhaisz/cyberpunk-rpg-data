{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true,
        "lib": ["ESNext"],
        "outDir": "dist",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}